{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],

    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,

    "paths": {
      "@fbts/*": ["fbts/*"],
      "*": [
        "./*",
        "./@types/*",
        "node_modules/@types/*",
        "node_modules/*/index.d.ts"
      ]
    }
  }
}
